<div class="cards mt-4">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1972&q=80)">
      <%= link_to cocktail.name.capitalize, cocktail_path(cocktail), class: 'text-decoration-none' %>
      <!-- <%= cocktail.name.capitalize %> -->
    </div>
  <% end %>
</div>
